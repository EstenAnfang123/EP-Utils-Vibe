<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<ViewSettingsDialog confirm="handleConfirmFilter" id="viewSettingsDialog">
		<filterItems>
			<ViewSettingsFilterItem
				text="{i18n>projectCategories}"
				key="projectsCategories"
				items="{projectsCategories>/}"
			>
				<items>
					<ViewSettingsItem
						text="{projectsCategories>label}"
						key="{projectsCategories>value}"
					/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="{i18n>projectOwner}"
				key="projectsOwners"
				items="{projectsOwners>/}"
			>
				<items>
					<ViewSettingsItem
						text="{projectsOwners>label}"
						key="{projectsOwners>value}"
					/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="{i18n>projectManager}"
				key="projectsManagers"
				items="{projectsManagers>/}"
			>
				<items>
					<ViewSettingsItem
						text="{projectsManagers>label}"
						key="{projectsManagers>value}"
					/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="{i18n>TMFIX}"
				key="TMFIX"
			>
				<items>
					<ViewSettingsItem
						text="T&amp;M"
						key="T&amp;M"
					/>
					<ViewSettingsItem
						text="FIX"
						key="FIX"
					/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>