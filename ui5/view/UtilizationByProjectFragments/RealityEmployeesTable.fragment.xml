<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Table growing="true" items="{
		path: 'detail>/workersReality',
		sorter: {
			path: 'sortWeight'
		}
	}">
		<headerToolbar>
			<Toolbar>
				<content>
					<Title
						level="H2"
						text="{i18n>realityPlanTableTitle}"
					/>
				</content>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="16em">
				<Label
					design="Bold"
					text="{i18n>month}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>totalPlanned}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>january}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>february}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>march}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>april}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>may}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>june}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>july}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>august}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>september}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>october}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>november}"
				/>
			</Column>
			<Column hAlign="Center">
				<Label
					design="Bold"
					text="{i18n>december}"
				/>
			</Column>
		</columns>
		<items>
			<ColumnListItem class="{= ${detail>sortWeight} === 999 ? 'sapMListTblFooter' : ''}">
				<cells>
					<Text text="{detail>name}"/>
					<Text text="{detail>totalPlanned}"/>
					<Text text="{detail>january}"/>
					<Text text="{detail>february}"/>
					<Text text="{detail>march}"/>
					<Text text="{detail>april}"/>
					<Text text="{detail>may}"/>
					<Text text="{detail>june}"/>
					<Text text="{detail>july}"/>
					<Text text="{detail>august}"/>
					<Text text="{detail>september}"/>
					<Text text="{detail>october}"/>
					<Text text="{detail>november}"/>
					<Text text="{detail>december}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>