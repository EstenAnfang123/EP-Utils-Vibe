<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Table growing="true" items="{detail>/realEvalPrev}">
		<headerToolbar>
			<Toolbar>
				<content>
					<Title
						text="{i18n>evaluationTableTitle}"
						level="H2"
					/>
					<ToolbarSpacer/>
					<Button
						icon="sap-icon://excel-attachment"
						text="{i18n>export}"
						type="Accept"
						press=".onRealityPrevExportPress"
						visible="{= !!${detail>/user}}"
					/>
					<Button
						icon="sap-icon://synchronize"
						press=".onRefreshDetailPress"
						visible="{= !!${detail>/user}}"
					/>
				</content>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="16em">
				<Text text="{i18n>month}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>january}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>february}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>march}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>april}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>may}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>june}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>july}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>august}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>september}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>october}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>november}"/>
			</Column>
			<Column hAlign="Center">
				<Text text="{i18n>december}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{detail>rowTitle}"/>
					<Text text="{
						path: 'detail>january',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>february',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>march',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>april',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>may',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>june',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>july',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>august',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>september',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>october',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>november',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
					<Text text="{
						path: 'detail>december',
						formatter: '.formatter.roundTo3Decimals'
					}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>